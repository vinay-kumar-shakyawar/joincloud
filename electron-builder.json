{
  "appId": "com.joincloud.app",
  "productName": "JoinCloud",
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "assets/icon.ico"
  },
  "npmRebuild": false,
  "asar": true,
  "asarUnpack": [
    "server/ui/**"
  ],
  "files": [
    "**/*",
    "!release-artifacts/**",
    "!**/.git/**",
    "!**/node_modules/.cache/**"
  ],
  "extraResources": [
    {
      "from": "server/bin",
      "to": "bin"
    }
  ]
}
